<h1>Contact List</h1>
@if(Model.Count == 0)
{
  <h2>No Contacts</h2>
}

  @foreach (var contact in Model)
  {
    <li>
      <h3>Name: @contact.GetName()</h3>
      <ul>
        <li>
          Phone Number: @contact.GetPhoneNumber()
        </li>
        <li>
          Address: @contact.GetAddress()
        </li>
      </li>
      </ul>
  }
<form action="/contacts_deleted" method="post">
<button type="submit" name="button">Delete all contacts</button>
</form>
<a href="/">Home</a>
<br><br>
<a href="/addContact">Add Contact</a>
